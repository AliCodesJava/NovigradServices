<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accueil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_branches_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:text="Branches"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtView_client_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:text="There are no branches found."
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:visibility="gone"/>


        <EditText
            android:id="@+id/editTxt_search_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName"
            android:paddingVertical="20sp" />

        <ListView
            android:id="@+id/lstView_branches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:divider="@android:color/transparent"
            android:dividerHeight="20.0sp">
        </ListView>

        <TextView
            android:id="@+id/txtView_client_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:gravity="center_vertical"
            android:text="Client"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp" />

        <Button
            android:id="@+id/test_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_test_document"
            android:text="Test doc" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>