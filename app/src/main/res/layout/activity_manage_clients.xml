<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageClients">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adminInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="50dp"
            android:layout_weight="0"
            android:text="@string/manageClientMessage"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/inputId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Client username"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/changeServicePriceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:onClick="deleteClientAccount"
            android:text="@string/clientModification1"
            android:textColor="#0C2A95"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>