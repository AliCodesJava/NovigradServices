<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddServiceForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="109dp">

        <TextView
            android:id="@+id/adminInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:text="@string/addServiceMessage"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/inputId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Service name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/servicePriceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Service price"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/changeServicePriceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:onClick="addService"
            android:text="@string/addService"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/addRequiredDocId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:onClick="removeService"
            android:text="@string/removeService"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/removeRequiredDocId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:onClick="modifyService"
            android:text="@string/modifyService"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>