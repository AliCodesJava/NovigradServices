<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="70dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_vertical"
            android:text="Service Novigrad"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txtView_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:paddingHorizontal="20sp"
            android:paddingVertical="5sp"
            android:text="Hi @{user.firstName}, welcome to Service Novigrad"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:paddingHorizontal="20sp"
            android:paddingVertical="5sp"
            android:text="What services are you looking for?"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Search" />


        <TextView
            android:id="@+id/txtView_user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:text="There are no services found."
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lstView_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp" />

        <TextView
            android:id="@+id/txtView_account_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_vertical"
            android:text="Logged in as @{user.getUsername()}"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>